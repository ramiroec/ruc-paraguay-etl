# URL de conexión a la base de datos (SQLite local)
DATABASE_URL="file:../data/rucpy.db"

# Configuración del cron para ejecutar una tarea programada
# Formato: segundo minuto hora día mes día_de_la_semana
# Este ejemplo ejecuta la tarea todos los días a las 4:00 AM
CRON_SCHEDULE="0 0 4 * * *"

# Zona horaria para el cron (Asunción, Paraguay)
TIMEZONE="America/Asuncion"

# Puerto en el que se ejecutará la aplicación
PORT=8080